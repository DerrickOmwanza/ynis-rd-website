  "description": "Complete peer-to-peer debt management system with M-PESA integration, automatic repayment processing, USSD interface, offline sync, and comprehensive testing framework",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:init": "node scripts/init-db.js",
    "db:seed": "node scripts/seed-db.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:safaricom": "jest tests/safaricom.test.js",
    "test:sync": "jest tests/sync.test.js",
    "test:e2e": "jest tests/e2e.test.js",
    "test:performance": "node tests/performance.test.js",
    "test:load": "node tests/load.test.js"
  },
  "keywords": [
    "mpesa",
    "debt-allocation",
    "peer-to-peer",
    "lending"
  ],
  "author": "",
